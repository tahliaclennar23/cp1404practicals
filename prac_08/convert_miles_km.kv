BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 65
            text: '7'
            multiline: False
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'down'
                on_press: app.handle_increment(input_number.text, -1)

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Convert m to km'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
        Label:
            text: app.kilometers
            font_size: 48
            color: (10, 1, 0, 1)



